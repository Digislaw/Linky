@model IEnumerable<Linky.Entities.Models.Link>

@{
    ViewBag.Title = "Index";
}
<div class="container body-content">
    <h2 class="linkycolor">Your links</h2>

    <a href="@Url.Action("Create")" class="btn btn-default linkybtn" >Create new</a>
    <table class="table linkycolor">
        <thead>
            <tr>
                <th>
                    Shortened link
                </th>
                <th>
                    Destination
                </th>
                <th>
                    Clicks
                </th>
                <th>
                    Created at
                </th>
                <th></th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="/@item.Label">@Url.Action("Index", "Home", null, "https")@item.Label</a>
                </td>
                <td>
                    <a href="@item.URL">@Html.DisplayFor(modelIem => item.URL)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Clicks)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    <div class="btn-group" role="group" aria-label="...">
                        <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-success">Details</a>
                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-warning">Edit</a>
                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger">Delete</a>
                    </div>

                </td>
            </tr>
        }

    </table>
    <div />
