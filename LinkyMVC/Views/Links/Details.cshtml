@model Linky.Entities.Models.Link

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="row">
    <div class="col-md-8">
        <div>
            <h4>Link</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.ApplicationUser.Email)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ApplicationUser.Email)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Label)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Label)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.URL)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.URL)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Clicks)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Clicks)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.CreatedAt)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CreatedAt)
                </dd>

            </dl>
        </div>
        <p>
            @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
            @Html.ActionLink("Back to List", "Index")
        </p>
    </div>

    <div id="qrCode" class="col-md-4"></div>
</div>

@if (Model.Clicks > 0)
{
    <div id="countryChart" style="height: 370px; width: 100%;"></div>
    <div id="dailyChart" style="height: 370px; width: 100%;"></div>
}

@section scripts
{
    @Scripts.Render("~/bundles/qrcode")
    <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>

    <!-- Statistics -->
    <script>
    window.onload = function () {

        var countryChart = new CanvasJS.Chart("countryChart", {
            theme: "light2",
            exportEnabled: true,
            animationEnabled: true,
            title: {
                text: "Clicks by country"
            },
            data: [{
                type: "pie",
                startAngle: 90,
                toolTipContent: "<b>{label}</b>: {y}",
                showInLegend: "true",
                legendText: "{label}",
                indexLabel: "{label} - {y}",
                dataPoints: @Html.Raw(ViewBag.CountryData)
	        }]
        });
        countryChart.render();

        var dailyChart = new CanvasJS.Chart("dailyChart", {
            theme: "light2",
	        animationEnabled: true,
	        title: {
		        text: "Number of clicks by day"
	        },
	        axisX: {
                valueFormatString: "DD MMM",
                interval: 1,
                intervalType: "day"
	        },
	        axisY: {
                interval: 1
	        },
	        data: [{
		        type: "column",
		        xValueType: "dateTime",
		        xValueFormatString: "DD MMM",
		        dataPoints: @Html.Raw(ViewBag.DailyData)
	        }]
        });
        dailyChart.render();
    }
    </script>

    <!-- QR -->
    <script>
        new QRCode("qrCode", "@Model.URL");
    </script>
}