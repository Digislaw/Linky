@{
    ViewBag.Title = "Home Page";
}

<div class="rectangle">
    <div class="center">
        <img src="~/logo.png" width="400px" />
    </div>
    
</div>
<div class="elipse">
    <div class="centerbutton">

        @Html.ActionLink("Start Now!", "Login", "Account", routeValues: null, htmlAttributes: new { @class = "btn btn-default linkybtn btn-size", id = "loginLink", })
    </div>
</div>

<section class="mt-5 coldescription">
    <div class="container">
        <div id="features" class="row text-center">
            <div class="col-lg-4 mb-4">
                <i class="fas fa-dollar-sign text-primary fa-10x linkycolor" ></i>
                <h2 class="mt-3">Free</h2>
                <p>
                    Use the site for free. Always and everywhere!
                </p>
            </div>

            <div class="col-lg-4 mb-4">
                <i class="fas fa-hand-point-up text-primary fa-10x linkycolor" ></i>
                <h2 class="mt-3">Easy to use</h2>
                <p>
                    Reach your goal in a few simple steps
                </p>
            </div>

            <div class="col-lg-4 mb-4">
                <i class="fas fa-chart-pie text-primary fa-10x linkycolor" ></i>
                <h2 class="mt-3">Statistics</h2>
                <p>
                    Learn more about the users clicking on the links
                </p>
            </div>
        </div>
    </div>
</section>